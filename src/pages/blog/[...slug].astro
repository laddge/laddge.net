---
import { getCollection } from 'astro:content'
import { format } from 'date-fns'

import Layout from '@/layouts/Layout.astro'

export const getStaticPaths = async () => {
  const posts = await getCollection('blog')
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

const { post } = Astro.props
const { Content } = await post.render()
---

<Layout
  title={`${post.data.title} | Laddge`}
  description={`${format(post.data.pubDate, 'yyyy年M月d日の記事')}`}
  preloadImg={post.data.image}
  ogImg={post.data.image}
>
  <script>
    import 'lazysizes'
  </script>
  <div class="p-6 prose mx-auto">
    <div class="pt-16">
      <a href="/articles" class="text-lg flex gap-2 items-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
          ><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"
          ></path></svg
        >
        Articles
      </a>
      <h1 class="text-3xl font-bold mt-6 mb-2">{post.data.title}</h1>
      <div class="flex flex-wrap gap-1">
        {
          post.data.tags.map((tag: string) => (
            <a
              href={`/articles?tags=${tag}`}
              class="btn btn-ghost px-1 h-auto min-h-0 normal-case text-base font-normal text-neutral/75"
            >
              #{tag}
            </a>
          ))
        }
      </div>
      <div class="my-2">
        {format(post.data.pubDate, 'MMM dd, yyyy')}
      </div>
    </div>
    <div
      class="my-4 flex-none w-full aspect-[1200/630] rounded-box bg-base-200 bg-no-repeat bg-center bg-[length:3rem_3rem] overflow-hidden"
      style="background-image: url(data:image/svg+xml;base64,);"
    >
      <img
        src={post.data.image}
        alt={post.data.slug}
        class="w-full h-full object-contain m-0"
        loading="lazy"
      />
    </div>
    <Content />
  </div>
</Layout>

<style is:global>
  .toc {
    @apply rounded-box bg-base-200 mt-8 pl-4 pr-8 py-2;
  }
  .toc ol {
    @apply list-none pl-4;
  }
  .toc li {
    @apply pl-0;
  }
  .toc a {
    @apply no-underline;
  }
</style>
