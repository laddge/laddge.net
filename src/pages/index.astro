    @apply bg-primary/[.8];
  }
</style>

<script>
  const toggleNavbar = () => {
    const navbar = document.getElementById('navbar')
    if (!navbar) return
    if (window.pageYOffset > 250) {
      navbar.classList.add('scrolled')
