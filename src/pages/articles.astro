---
import SearchArticles from '@/components/SearchArticles.svelte'
import Layout from '@/layouts/Layout.astro'
import { getArticles } from '@/lib/getArticles'

const articles = await getArticles()
---

<Layout title="Articles | Laddge" description="ブログ等の記事を検索">
  <div class="pt-28 pb-12 bg-base-100 min-h-screen">
    <div class="max-w-[1024px] mx-auto px-6">
      <h2 class="text-4xl font-bold mb-8 flex items-center gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="w-8 h-8"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z"
          ></path>
        </svg>
        Articles
      </h2>
      <SearchArticles allArticles={articles} client:load />
    </div>
  </div>
</Layout>
